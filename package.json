{
  "name": "react-one-feed",
  "version": "1.0.0",
  "description": "React-one-feed project v.1",
  "main": "index.js",
  "scripts": {
    "start-client": "yarn --cwd ./frontend serve",
    "build-client": "yarn --cwd ./frontend bundle",
    "start-server": "yarn --cwd ./backend start",
    "deploy-client": "rm -rf ./backend/public && mv ./frontend/build ./backend/public",
    "startDevelop": "concurrently \"yarn start-client\" \"yarn start-server\"",
    "start-prod-server": "yarn --cwd ./backend prodStart",
    "reinstall-dependencies": "yarn --cwd ./frontend && yarn --cwd ./backend",
    "clean-node-modules": "rm -rf ./backend/node_modules && rm -rf ./frontend/node_modules",
    "start": "yarn clean-node-modules && yarn reinstall-dependencies && yarn build-client && yarn deploy-client && yarn start-prod-server"
  },
  "author": "bareysho",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^6.0.0"
  }
}
